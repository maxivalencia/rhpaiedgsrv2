{% extends 'base.html.twig' %}

{% block title %}Détail d'une effectation personnel{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header bg-gradient-primary">
        <h4 class="card-title justify-content-between font-weight-bold">Détail d'une effectation personnel</h4>
    </div>
    <div class="card-comments justify-content-center m-2">
        <div class="row justify-content-center">
            <div class="col-auto justify-content-center">
                <table class="table table-sm">
                    <tbody>
                        <tr>
                            <th>Personnel</th>
                            <td>{{ affectations_personnel.personnel }}</td>
                        </tr>
                        <tr>
                            <th>Décision d'affectation</th>
                            <td>{{ affectations_personnel.decisionAffectation }}</td>
                        </tr>                    
                        <tr>
                            <th>Fonction</th>
                            <td>{{ affectations_personnel.fonction }}</td>
                        </tr>
                        <tr>
                            <th>Motif d'affectation</th>
                            <td>{{ affectations_personnel.motifAffectation }}</td>
                        </tr>                        
                        <tr class="col-auto">
                            <th class="col-auto">Date d'affectation</th>
                            <td class="col-auto">{{ affectations_personnel.dateAffectation ? affectations_personnel.dateAffectation|date('d/m/Y') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Date de disponibilité</th>
                            <td>{{ affectations_personnel.dateDisponibilite ? affectations_personnel.dateDisponibilite|date('d/m/Y') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Reference de disponibilité</th>
                            <td>{{ affectations_personnel.referenceDisponibilite }}</td>
                        </tr>
                        <tr>
                            <th>Date de reférence disponibilité</th>
                            <td>{{ affectations_personnel.dateReferenceDisponibilite ? affectations_personnel.dateReferenceDisponibilite|date('d/m/Y') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Unité</th>
                            <td>{{ affectations_personnel.unite }}</td>
                        </tr>
                        <tr>
                            <th>Fonction</th>
                            <td>{{ affectations_personnel.fonction }}</td>
                        </tr>
                        <tr>
                            <th>Décision d'affectation</th>
                            <td>{{ affectations_personnel.decisionAffectation }}</td>
                        </tr>
                        <tr>
                            <th>Situation</th>
                            <td>{{ affectations_personnel.situation }}</td>
                        </tr>
                        <tr>
                            <th>Annulation</th>
                            <td>{{ affectations_personnel.annulation }}</td>
                        </tr>
                        <tr>
                            <th>Motif d'annulation</th>
                            <td>{{ affectations_personnel.motifAnnulation }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="card-footer bg-gradient-white">
        <div class="row">
            <div class="col-1">
                <a href="{{ path('affectations_personnels_index') }}" class="btn btn-sm bg-gradient-primary m-2"><i class="fa fa-arrow-left" aria-hidden="true"></i> Retour</a>
            </div>
            <div class="col-1">
                <a href="{{ path('affectations_personnels_edit', {'id': affectations_personnel.id}) }}" class="btn btn-sm bg-gradient-success m-2"><i class="fa fa-book" aria-hidden="true"></i> Modifier</a>
            </div>
            <div class="col-1 ml-2">
                {{ include('affectations_personnels/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}