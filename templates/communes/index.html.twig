{% extends 'base.html.twig' %}

{% block title %}Liste Communes{% endblock %}

{% block body %}
    <h1>Liste Communes</h1>
    <form class="mt-2 mt-md-0 d-none d-lg-block search-input" action="{{ path('communes_recherche') }}">
        <div class="input-group">
            <span class="input-group-addon d-flex align-items-center"><i class="icon-magnifier icons"></i></span>
            <input type="text" name="search" class="form-control" placeholder="Search...">
        </div>
    </form>
    <a href="{{ path('communes_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer</a>
    <table id="user_liste" class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Commune</th>
                <th>Type Commune</th>
                <th>District</th>
                <th>Région</th>
                <th>Province</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commune in communes %}
            <tr>
                {# <td>{{ commune.id }}</td> #}
                <td>{{ commune.commune }}</td>
                <td>{{ commune.type }}</td>
                <td>{{ commune.district }}</td>
                <td>{{ commune.district.region }}</td>
                <td>{{ commune.district.region.province }}</td>
                <td>
                    <a href="{{ path('communes_show', {'id': commune.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('communes_edit', {'id': commune.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <div class="navigation">
        {{ knp_pagination_render(communes) }}
    </div> #}

    <a href="{{ path('communes_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer</a>

    {% block javascripts %}
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
        <script>
            $(document).ready( function () {
                $('#user_liste').DataTable();
            } );
        </script>
    {% endblock %}
{% endblock %}
