{% extends 'base.html.twig' %}

{% block title %}Liste Communes{% endblock %}

{% block body %}
    <h1>Liste Communes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Commune</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commune in communes %}
            <tr>
                <td>{{ commune.id }}</td>
                <td>{{ commune.commune }}</td>
                <td>
                    <a href="{{ path('communes_show', {'id': commune.id}) }}"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('communes_edit', {'id': commune.id}) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('communes_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer</a>
{% endblock %}
