{% extends 'base.html.twig' %}

{% block title %}Liste Décisions Affectations{% endblock %}

{% block body %}
    <h1>Liste Décisions Affectations</h1>

    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Reférence de la décision</th>
                <th>Date de la décision</th>
                <th>Genre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for decisions_affectation in decisions_affectations %}
            <tr>
                {# <td>{{ decisions_affectation.id }}</td> #}
                <td>{{ decisions_affectation.referenceDecision }}</td>
                <td>{{ decisions_affectation.dateDecision ? decisions_affectation.dateDecision|date('d/m/Y') : '' }}</td>
                <td>{{ decisions_affectation.genre }}</td>
                <td>
                    <a href="{{ path('decisions_affectations_show', {'id': decisions_affectation.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('decisions_affectations_edit', {'id': decisions_affectation.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('decisions_affectations_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer</a>
{% endblock %}
