{% extends 'base.html.twig' %}

{% block title %}Liste Décisions Promotions{% endblock %}

{% block body %}
    <h1>Liste Décisions Promotions</h1>

    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Reférence de la décision</th>
                <th>Date de la décision</th>
                <th>Genre de la décision</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for decisions_promotion in decisions_promotions %}
            <tr>
                {# <td>{{ decisions_promotion.id }}</td> #}
                <td>{{ decisions_promotion.referenceDecision }}</td>
                <td>{{ decisions_promotion.dateDecision ? decisions_promotion.dateDecision|date('d/m/Y') : '' }}</td>
                <td>{{ decisions_promotion.genreDecision }}</td>
                <td>
                    <a href="{{ path('decisions_promotions_show', {'id': decisions_promotion.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('decisions_promotions_edit', {'id': decisions_promotion.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('decisions_promotions_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer</a>
{% endblock %}
