{% extends 'base.html.twig' %}

{% block title %}Liste Décisions Radiations Contrôles{% endblock %}

{% block body %}
    <h1>Liste Décisions Radiations Contrôles</h1>
    <form class="mt-2 mt-md-0 d-none d-lg-block search-input" action="{{ path('decisions_radiations_controles_recherche') }}">
        <div class="input-group">
            <span class="input-group-addon d-flex align-items-center"><i class="icon-magnifier icons"></i></span>
            <input type="text" name="search" class="form-control" placeholder="Search...">
        </div>
    </form>
    <a href="{{ path('decisions_radiations_controles_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer</a>
    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Reférence du décision</th>
                <th>Date de reférence</th>
                <th>Reférence de journal officiel</th>
                <th>Date de journal officiel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for decisions_radiations_controle in decisions_radiations_controles %}
            <tr>
                {# <td>{{ decisions_radiations_controle.id }}</td> #}
                <td>{{ decisions_radiations_controle.referenceDecision }}</td>
                <td>{{ decisions_radiations_controle.dateReference ? decisions_radiations_controle.dateReference|date('d/m/Y') : '' }}</td>
                <td>{{ decisions_radiations_controle.referenceJournalOfficiel }}</td>
                <td>{{ decisions_radiations_controle.dateJournalOfficiel ? decisions_radiations_controle.dateJournalOfficiel|date('d/m/Y') : '' }}</td>
                <td>
                    <a href="{{ path('decisions_radiations_controles_show', {'id': decisions_radiations_controle.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('decisions_radiations_controles_edit', {'id': decisions_radiations_controle.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(decisions_radiations_controles) }}
    </div>

    <a href="{{ path('decisions_radiations_controles_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer</a>
{% endblock %}
