{% extends 'base.html.twig' %}

{% block title %}Détail déc. radiation{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header bg-gradient-primary">
            <h4 class="card-title justify-content-between font-weight-bold">Détail déc. radiation</h4>
        </div>
        <div class="card-comments justify-content-center m-2">
            <div class="row justify-content-center">
                <div class="col-auto justify-content-center">
                    <table class="table table-sm">
                        <tbody>
                            <tr class="col-auto">
                                <th class="col-auto">Reférence de la décision</th>
                                <td class="col-auto">{{ decisions_radiations_controle.referenceDecision }}</td>
                            </tr>
                            <tr>
                                <th>Date de reférence</th>
                                <td>{{ decisions_radiations_controle.dateReference ? decisions_radiations_controle.dateReference|date('d/m/Y') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Reférence dans le journal officiel</th>
                                <td>{{ decisions_radiations_controle.referenceJournalOfficiel }}</td>
                            </tr>
                            <tr>
                                <th>Date dans le journal officiel</th>
                                <td>{{ decisions_radiations_controle.dateJournalOfficiel ? decisions_radiations_controle.dateJournalOfficiel|date('d/m/Y') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-2"></div>
            </div>
        </div>
        <div class="card-footer bg-gradient-white">
            <div class="row">
                <div class="col-1">
                    <a href="{{ path('decisions_radiations_controles_index') }}" class="btn btn-sm bg-gradient-primary m-2"><i class="fa fa-arrow-left" aria-hidden="true"></i> Retour</a>
                </div>
                <div class="col-1">
                    <a href="{{ path('decisions_radiations_controles_edit', {'id': decisions_radiations_controle.id}) }}" class="btn btn-sm bg-gradient-success m-2"><i class="fa fa-book" aria-hidden="true"></i> Modifier</a>
                </div>
                <div class="col-1 ml-2">
                    {{ include('decisions_radiations_controles/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}