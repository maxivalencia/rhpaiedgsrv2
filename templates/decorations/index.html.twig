{% extends 'base.html.twig' %}

{% block title %}Liste Décorations{% endblock %}

{% block body %}
    <h1>Liste Décorations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Abbréviation</th>
                <th>Ordre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for decoration in decorations %}
            <tr>
                <td>{{ decoration.id }}</td>
                <td>{{ decoration.libelle }}</td>
                <td>{{ decoration.abbreviation }}</td>
                <td>{{ decoration.ordre }}</td>
                <td>
                    <a href="{{ path('decorations_show', {'id': decoration.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('decorations_edit', {'id': decoration.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('decorations_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer</a>
{% endblock %}
