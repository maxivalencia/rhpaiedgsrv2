{% extends 'base.html.twig' %}

{% block title %}Decorations index{% endblock %}

{% block body %}
    <h1>Decorations index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Abbreviation</th>
                <th>Ordre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for decoration in decorations %}
            <tr>
                <td>{{ decoration.id }}</td>
                <td>{{ decoration.libelle }}</td>
                <td>{{ decoration.abbreviation }}</td>
                <td>{{ decoration.ordre }}</td>
                <td>
                    <a href="{{ path('decorations_show', {'id': decoration.id}) }}">show</a>
                    <a href="{{ path('decorations_edit', {'id': decoration.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('decorations_new') }}">Create new</a>
{% endblock %}
