{% extends 'base.html.twig' %}

{% block title %}Détail décoration personnel{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header bg-gradient-primary">
            <h4 class="card-title justify-content-between font-weight-bold">Détail décoration personnel</h4>
        </div>
        <div class="card-comments justify-content-center m-2">
            <div class="row justify-content-center">
                <div class="col-auto justify-content-center">
                    <table class="table table-sm">
                        <tbody>
                            <tr>
                                <th>Personnel</th>
                                <td>{{ decorations_personnel.personnel }}</td>
                            </tr>
                            <tr class="col-auto">
                                <th class="col-auto">Décoration</th>
                            <td class="col-auto">{{ decorations_personnel.decoration }}</td>
                            </tr>
                            <tr>
                                <th>Date</th>
                                <td>{{ decorations_personnel.date ? decorations_personnel.date|date('d/m/Y') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Reférence</th>
                                <td>{{ decorations_personnel.reference }}</td>
                            </tr>
                            <tr>
                                <th>Date de reférence</th>
                                <td>{{ decorations_personnel.dateReference ? decorations_personnel.dateReference|date('d/m/Y') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-2"></div>
            </div>
        </div>
        <div class="card-footer bg-gradient-white">
            <div class="row">
                <div class="col-1">
                    <a href="{{ path('decorations_personnels_index') }}" class="btn btn-sm bg-gradient-primary m-2"><i class="fa fa-arrow-left" aria-hidden="true"></i> Retour</a>
                </div>
                <div class="col-1">
                    <a href="{{ path('decorations_personnels_edit', {'id': decorations_personnel.id}) }}" class="btn btn-sm bg-gradient-success m-2"><i class="fa fa-book" aria-hidden="true"></i> Modifier</a>
                </div>
                <div class="col-1 ml-2">
                    {{ include('decorations_personnels/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
    
{% endblock %}