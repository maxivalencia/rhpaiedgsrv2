{% extends 'base.html.twig' %}

{% block title %}Région{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header bg-gradient-primary">
        <h4 class="card-title justify-content-between font-weight-bold">Région</h4>
    </div>
    <div class="card-comments justify-content-center m-2">
        <div class="row justify-content-center">
            <div class="col-auto justify-content-center">
                <table class="table table-sm">
                    <tbody>
                        <tr class="col-auto">
                            <th class="col-auto">Province</th>
                            <td class="col-auto">{{ district.region.province }}</td>
                        </tr>
                        <tr class="col-auto">
                            <th class="col-auto">Région</th>
                            <td class="col-auto">{{ district.region }}</td>
                        </tr>
                        <tr class="col-auto">
                            <th class="col-auto">District</th>
                            <td class="col-auto">{{ district.district }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="card-footer bg-gradient-white">
        <div class="row">
            <div class="col-1">
                <a href="{{ path('districts_index') }}" class="btn btn-sm bg-gradient-primary m-2"><i class="fa fa-arrow-left" aria-hidden="true"></i> Retour</a>
            </div>
            <div class="col-1">
                <a href="{{ path('districts_edit', {'id': district.id}) }}" class="btn btn-sm bg-gradient-success m-2"><i class="fa fa-book" aria-hidden="true"></i> Modifier</a>
            </div>
            <div class="col-1 ml-2">
                {{ include('districts/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}