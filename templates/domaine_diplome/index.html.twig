{% extends 'base.html.twig' %}

{% block title %}Liste Domaine Diplôme{% endblock %}

{% block body %}
    <h1>Liste Domaine Diplôme</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for domaine_diplome in domaine_diplomes %}
            <tr>
                <td>{{ domaine_diplome.id }}</td>
                <td>{{ domaine_diplome.libelle }}</td>
                <td>
                    <a href="{{ path('domaine_diplome_show', {'id': domaine_diplome.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('domaine_diplome_edit', {'id': domaine_diplome.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('domaine_diplome_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer</a>
{% endblock %}
