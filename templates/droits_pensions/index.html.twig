{% extends 'base.html.twig' %}

{% block title %}Liste Droits Pensions{% endblock %}

{% block body %}
    <h1>Liste Droits Pensions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for droits_pension in droits_pensions %}
            <tr>
                <td>{{ droits_pension.id }}</td>
                <td>{{ droits_pension.libelle }}</td>
                <td>
                    <a href="{{ path('droits_pensions_show', {'id': droits_pension.id}) }}"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('droits_pensions_edit', {'id': droits_pension.id}) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('droits_pensions_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer</a>
{% endblock %}
