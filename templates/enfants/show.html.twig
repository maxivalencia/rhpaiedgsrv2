{% extends 'base.html.twig' %}

{% block title %}Enfants{% endblock %}

{% block body %}
    <h1>Enfants</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ enfant.id }}</td>
            </tr>
            <tr>
                <th>Rang</th>
                <td>{{ enfant.rang }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ enfant.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ enfant.prenom }}</td>
            </tr>
            <tr>
                <th>Date_naissance</th>
                <td>{{ enfant.dateNaissance ? enfant.dateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Lieu_naissance</th>
                <td>{{ enfant.lieuNaissance }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ enfant.sexe ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Qualite</th>
                <td>{{ enfant.qualite }}</td>
            </tr>
            <tr>
                <th>Est_decede</th>
                <td>{{ enfant.estDecede ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Date_dece</th>
                <td>{{ enfant.dateDece ? enfant.dateDece|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('enfants_index') }}">back to list</a>

    <a href="{{ path('enfants_edit', {'id': enfant.id}) }}">edit</a>

    {{ include('enfants/_delete_form.html.twig') }}
{% endblock %}
