{% extends 'base.html.twig' %}

{% block title %}Fonctions index{% endblock %}

{% block body %}
    <h1>Fonctions index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Abbreviation</th>
                <th>Hierarchie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fonction in fonctions %}
            <tr>
                <td>{{ fonction.id }}</td>
                <td>{{ fonction.libelle }}</td>
                <td>{{ fonction.abbreviation }}</td>
                <td>{{ fonction.hierarchie }}</td>
                <td>
                    <a href="{{ path('fonctions_show', {'id': fonction.id}) }}">show</a>
                    <a href="{{ path('fonctions_edit', {'id': fonction.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('fonctions_new') }}">Create new</a>
{% endblock %}
