{% extends 'base.html.twig' %}

{% block title %}Liste Fonctions{% endblock %}

{% block body %}
    <h1>Liste Fonctions</h1>
    <form class="mt-2 mt-md-0 d-none d-lg-block search-input" action="#">
        <div class="input-group">
            <span class="input-group-addon d-flex align-items-center"><i class="icon-magnifier icons"></i></span>
            <input type="text" name="search" class="form-control" placeholder="Search...">
        </div>
    </form>
    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Libelle</th>
                <th>Abbréviation</th>
                <th>Hierarchie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fonction in fonctions %}
            <tr>
                {# <td>{{ fonction.id }}</td> #}
                <td>{{ fonction.libelle }}</td>
                <td>{{ fonction.abbreviation }}</td>
                <td>{{ fonction.hierarchie }}</td>
                <td>
                    <a href="{{ path('fonctions_show', {'id': fonction.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('fonctions_edit', {'id': fonction.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(fonctions) }}
    </div>

    <a href="{{ path('fonctions_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer</a>
{% endblock %}
