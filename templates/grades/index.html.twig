{% extends 'base.html.twig' %}

{% block title %}Grades index{% endblock %}

{% block body %}
    <h1>Grades index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Grade</th>
                <th>Abbreviation</th>
                <th>Rang</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for grade in grades %}
            <tr>
                <td>{{ grade.id }}</td>
                <td>{{ grade.grade }}</td>
                <td>{{ grade.abbreviation }}</td>
                <td>{{ grade.rang }}</td>
                <td>
                    <a href="{{ path('grades_show', {'id': grade.id}) }}">show</a>
                    <a href="{{ path('grades_edit', {'id': grade.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('grades_new') }}">Create new</a>
{% endblock %}
