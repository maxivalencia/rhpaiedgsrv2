{% extends 'base.html.twig' %}

{% block title %}Liste Grades{% endblock %}

{% block body %}
    <h1>Liste Grades</h1>

    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Grade</th>
                <th>Abbréviation</th>
                <th>Rang</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for grade in grades %}
            <tr>
                {# <td>{{ grade.id }}</td> #}
                <td>{{ grade.grade }}</td>
                <td>{{ grade.abbreviation }}</td>
                <td>{{ grade.rang }}</td>
                <td>
                    <a href="{{ path('grades_show', {'id': grade.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('grades_edit', {'id': grade.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('grades_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer</a>
{% endblock %}
