{% extends 'base.html.twig' %}

{% block title %}Détail grade{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header bg-gradient-primary">
        <h4 class="card-title justify-content-between font-weight-bold">Détail grade</h4>
    </div>
    <div class="card-comments justify-content-center m-2">
        <div class="row justify-content-center">
            <div class="col-auto justify-content-center">
                <table class="table table-sm">
                    <tbody>
                        <tr class="col-auto">
                            <th class="col-auto">Grade</th>
                            <td>{{ grade.grade }}</td>
                        </tr>
                        <tr class="col-auto">
                            <th class="col-auto">Abbréviation</th>
                            <td>{{ grade.abbreviation }}</td>
                        </tr>
                        <tr class="col-auto">
                            <th class="col-auto">Rang</th>
                            <td>{{ grade.rang }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="card-footer bg-gradient-white">
        <div class="row">
            <div class="col-1">
                <a href="{{ path('grades_index') }}" class="btn btn-sm bg-gradient-primary m-2"><i class="fa fa-arrow-left" aria-hidden="true"></i> Retour</a>
            </div>
            <div class="col-1">
                <a href="{{ path('grades_edit', {'id': grade.id}) }}" class="btn btn-sm bg-gradient-success m-2"><i class="fa fa-book" aria-hidden="true"></i> Modifier</a>
            </div>
            <div class="col-1 ml-2">
                {{ include('grades/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}