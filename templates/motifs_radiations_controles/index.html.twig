{% extends 'base.html.twig' %}

{% block title %}Liste Motifs Radiations Contrôles{% endblock %}

{% block body %}
    <h1>Liste Motifs Radiations Contrôles</h1>
    <form class="mt-2 mt-md-0 d-none d-lg-block search-input" action="{{ path('motifs_radiations_controles_recherche') }}">
        <div class="input-group">
            <span class="input-group-addon d-flex align-items-center"><i class="icon-magnifier icons"></i></span>
            <input type="text" name="search" class="form-control" placeholder="Search...">
        </div>
    </form>
    <a href="{{ path('motifs_radiations_controles_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer</a>
    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for motifs_radiations_controle in motifs_radiations_controles %}
            <tr>
                {# <td>{{ motifs_radiations_controle.id }}</td> #}
                <td>{{ motifs_radiations_controle.libelle }}</td>
                <td>
                    <a href="{{ path('motifs_radiations_controles_show', {'id': motifs_radiations_controle.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('motifs_radiations_controles_edit', {'id': motifs_radiations_controle.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(motifs_radiations_controles) }}
    </div>

    <a href="{{ path('motifs_radiations_controles_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer</a>
{% endblock %}
