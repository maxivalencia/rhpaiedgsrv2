{% extends 'base.html.twig' %}

{% block title %}Liste Niveau Diplome{% endblock %}

{% block body %}
    <h1>Liste Niveau Diplome</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for niveau_diplome in niveau_diplomes %}
            <tr>
                <td>{{ niveau_diplome.id }}</td>
                <td>{{ niveau_diplome.libelle }}</td>
                <td>
                    <a href="{{ path('niveau_diplome_show', {'id': niveau_diplome.id}) }}"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('niveau_diplome_edit', {'id': niveau_diplome.id}) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('niveau_diplome_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer</a>
{% endblock %}
