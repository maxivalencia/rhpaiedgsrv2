{% extends 'base.html.twig' %}

{% block title %}Note personnel{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header bg-gradient-primary">
        <h4 class="card-title justify-content-between font-weight-bold">Note personnel</h4>
    </div>
    <div class="card-comments justify-content-center m-2">
        <div class="row justify-content-center">
            <div class="col-auto justify-content-center">
                <table class="table table-sm">
                    <tbody>
                        <tr class="col-auto">
                            <th class="col-auto">Personnel à noter</th>
                            <td class="col-auto">{{ notes_personnel.personnel }}</td>
                        </tr>
                        <tr>
                            <th>Année</th>
                            <td>{{ notes_personnel.dateNote ? notes_personnel.dateNote|date('Y') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Note</th>
                            <td>{{ notes_personnel.note }}</td>
                        </tr>
                        <tr>
                            <th>Appréciation global</th>
                            <td>{{ notes_personnel.appreciationGlobal }}</td>
                        </tr>
                        <tr>
                            <th>Reférence de la note</th>
                            <td>{{ notes_personnel.referenceNote }}</td>
                        </tr>
                        <tr>
                            <th>Date de la reférence</th>
                            <td>{{ notes_personnel.dateReference ? notes_personnel.dateReference|date('d/m/Y') : '' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="card-footer bg-gradient-white">
        <div class="row">
            <div class="col-1">
                <a href="{{ path('notes_personnels_index') }}" class="btn btn-sm bg-gradient-primary m-2"><i class="fa fa-arrow-left" aria-hidden="true"></i> Retour</a>
            </div>
            <div class="col-1">
                <a href="{{ path('notes_personnels_edit', {'id': notes_personnel.id}) }}" class="btn btn-sm bg-gradient-success m-2"><i class="fa fa-book" aria-hidden="true"></i> Modifier</a>
            </div>
            <div class="col-1 ml-2">
                {{ include('notes_personnels/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}