{% extends 'base.html.twig' %}

{% block title %}Liste Permissions{% endblock %}

{% block body %}
    <h1>Liste Permissions</h1>
    <form class="mt-2 mt-md-0 d-none d-lg-block search-input" action="{{ path('permissions_recherche') }}">
        <div class="input-group">
            <span class="input-group-addon d-flex align-items-center"><i class="icon-magnifier icons"></i></span>
            <input type="text" name="search" class="form-control" placeholder="Search...">
        </div>
    </form>
    <a href="{{ path('permissions_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer</a>
    <table id="user_liste" class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Année</th>
                <th>Date de départ</th>
                <th>Date de fin</th>
                <th>Durée</th>
                <th>Personnel</th>
                {# <th>Reliquat</th> #}
                {# <th>Type de permission</th> #}
                {# <th>Lieu de jouissance</th> #}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for permission in permissions %}
            <tr>
                {# <td>{{ permission.id }}</td> #}
                <td>{{ permission.annee ? permission.annee|date('Y') : '' }}</td>
                <td>{{ permission.dateDepart ? permission.dateDepart|date('d/m/Y') : '' }}</td>
                <td>{{ permission.dateFin ? permission.dateFin|date('d/m/Y') : '' }}</td>
                <td>{{ permission.duree }}</td>
                <td>{{ permission.personnel }}</td>
                {# <td>{{ permission.reliquat }}</td> #}
                {# <td>{{ permission.typePermission }}</td> #}
                {# <td>{{ permission.lieuJouissance }}</td> #}
                <td>
                    <a href="{{ path('permissions_show', {'id': permission.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('permissions_edit', {'id': permission.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <div class="navigation">
        {{ knp_pagination_render(permissions) }}
    </div> #}

    <a href="{{ path('permissions_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer</a>

    {% block javascripts %}
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
        <script>
            $(document).ready( function () {
                $('#user_liste').DataTable();
            } );
        </script>
    {% endblock %}
{% endblock %}
