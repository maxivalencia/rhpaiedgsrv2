{% extends 'base.html.twig' %}

{% block title %}Liste Photos{% endblock %}

{% block body %}
    <h1>Liste Photos</h1>
    <form class="mt-2 mt-md-0 d-none d-lg-block search-input" action="#">
        <div class="input-group">
            <span class="input-group-addon d-flex align-items-center"><i class="icon-magnifier icons"></i></span>
            <input type="text" name="search" class="form-control" placeholder="Search...">
        </div>
    </form>
    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Photo</th>
                {# <th>Type</th> #}
                {# <th>Taille</th> #}
                <th>Personnel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for photo in photos %}
            <tr>
                {# <td>{{ photo.id }}</td> #}
                <td><img src="/photos/{{ photo.photo }}" alt="{{ photo.personnel }}" style="width:50px;"></td>
                {# <td>{{ photo.type }}</td> #}
                {# <td>{{ photo.taille }}</td> #}
                <td>{{ photo.personnel }}</td>
                <td>
                    <a href="{{ path('photos_show', {'id': photo.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('photos_edit', {'id': photo.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(photos) }}
    </div>

    <a href="{{ path('photos_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer</a>
{% endblock %}
