{% extends 'base.html.twig' %}

{% block title %}Photos{% endblock %}

{% block body %}
    <h1>Photos</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ photo.id }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ photo.photo }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ photo.type }}</td>
            </tr>
            <tr>
                <th>Taille</th>
                <td>{{ photo.taille }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('photos_index') }}" class="btn btn-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i> Retour</a>
    <br>
    <a href="{{ path('photos_edit', {'id': photo.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i> Modifier</a>

    {{ include('photos/_delete_form.html.twig') }}
{% endblock %}
