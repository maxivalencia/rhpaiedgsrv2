{% extends 'base.html.twig' %}

{% block title %}Liste Regions{% endblock %}

{% block body %}
    <h1>Liste Regions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Region</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for region in regions %}
            <tr>
                <td>{{ region.id }}</td>
                <td>{{ region.region }}</td>
                <td>
                    <a href="{{ path('regions_show', {'id': region.id}) }}"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('regions_edit', {'id': region.id}) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('regions_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer</a>
{% endblock %}
