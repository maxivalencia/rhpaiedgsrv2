{% extends 'base.html.twig' %}

{% block title %}Liste Régions{% endblock %}

{% block body %}
    <h1>Liste Régions</h1>

    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Région</th>
                <th>Province</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for region in regions %}
            <tr>
                {# <td>{{ region.id }}</td> #}
                <td>{{ region.region }}</td>
                <td>{{ region.province }}</td>
                <td>
                    <a href="{{ path('regions_show', {'id': region.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('regions_edit', {'id': region.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('regions_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer</a>
{% endblock %}
