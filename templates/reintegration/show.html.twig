{% extends 'base.html.twig' %}

{% block title %}Renseignements radiation personnel{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header bg-gradient-primary">
        <h4 class="card-title justify-content-between font-weight-bold">Renseignements radiation personnel</h4>
    </div>
    <div class="card-comments justify-content-center m-2">
        <div class="row justify-content-center">
            <div class="col-auto justify-content-center">
                <table class="table table-sm">
                    <tbody>
                        <tr class="col-auto">
                            <th class="col-auto">>Personnel</th>
                            <td class="col-auto">{{ reintegration.personnel }}</td>
                        </tr>
                        <tr>
                            <th>Date de notification</th>
                            <td>{{ reintegration.dateNotification ? reintegration.dateNotification|date('d/m/Y') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Date de réintegration</th>
                            <td>{{ reintegration.dateReintegration ? reintegration.dateReintegration|date('d/m/Y') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Référence rc de réintegration</th>
                            <td>{{ reintegration.referenceRcReintegration }}</td>
                        </tr>
                        <tr>
                            <th>Date rc de réintegration</th>
                            <td>{{ reintegration.dateRcReintegration ? reintegration.dateRcReintegration|date('d/m/Y') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Date prévu de réintegration</th>
                            <td>{{ reintegration.datePrevuReintegration ? reintegration.datePrevuReintegration|date('d/m/Y') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Décision de radiation concerné</th>
                            <td>{{ reintegration.radiation }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="card-footer bg-gradient-white">
        <div class="row">
            <div class="col-1">
                <a href="{{ path('reintegration_index') }}" class="btn btn-sm bg-gradient-primary m-2"><i class="fa fa-arrow-left" aria-hidden="true"></i> Retour</a>
            </div>
            <div class="col-1">
                <a href="{{ path('reintegration_edit', {'id': radiations_personnel.id}) }}" class="btn btn-sm bg-gradient-success m-2"><i class="fa fa-book" aria-hidden="true"></i> Modifier</a>
            </div>
            <div class="col-1 ml-2">
                {{ include('reintegration/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}