{% extends 'base.html.twig' %}

{% block title %}Liste des Types de Maladie{% endblock %}

{% block body %}
    <h1>Liste des Type de Maladie</h1>
    <a href="{{ path('type_maladie_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer</a>
    <table id="user_liste" class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Type maladie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_maladie in type_maladies %}
            <tr>
                {# <td>{{ type_maladie.id }}</td> #}
                <td>{{ type_maladie.libelle }}</td>
                <td>
                    <a href="{{ path('type_maladie_show', {'id': type_maladie.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('type_maladie_edit', {'id': type_maladie.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('type_maladie_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer</a>

    {% block javascripts %}
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
        <script>
            $(document).ready( function () {
                $('#user_liste').DataTable();
            } );
        </script>
    {% endblock %}
{% endblock %}
