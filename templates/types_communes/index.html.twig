{% extends 'base.html.twig' %}

{% block title %}Liste Types de Communes{% endblock %}

{% block body %}
    <h1>Liste Types de Communes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for types_commune in types_communes %}
            <tr>
                <td>{{ types_commune.id }}</td>
                <td>{{ types_commune.type }}</td>
                <td>
                    <a href="{{ path('types_communes_show', {'id': types_commune.id}) }}" class="btn btn-success"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('types_communes_edit', {'id': types_commune.id}) }}" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('types_communes_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer</a>
{% endblock %}
