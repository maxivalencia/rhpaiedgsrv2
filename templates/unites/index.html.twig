{% extends 'base.html.twig' %}

{% block title %}Liste Unités{% endblock %}

{% block body %}
    <h1>Liste Unités</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Abbréviation</th>
                <th>Localité</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for unite in unites %}
            <tr>
                <td>{{ unite.id }}</td>
                <td>{{ unite.libelle }}</td>
                <td>{{ unite.abbreviation }}</td>
                <td>{{ unite.localite }}</td>
                <td>{{ unite.email }}</td>
                <td>{{ unite.phone }}</td>
                <td>
                    <a href="{{ path('unites_show', {'id': unite.id}) }}"><i class="fa fa-book" aria-hidden="true"></i></a>
                    <a href="{{ path('unites_edit', {'id': unite.id}) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('unites_new') }}" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Créer</a>
{% endblock %}
