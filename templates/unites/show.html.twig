{% block title %}Unités{% endblock %}

{% block body %}
    <h1>Unités</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ unite.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ unite.libelle }}</td>
            </tr>
            <tr>
                <th>Abbréviation</th>
                <td>{{ unite.abbreviation }}</td>
            </tr>
            <tr>
                <th>Localité</th>
                <td>{{ unite.localite }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ unite.email }}</td>
            </tr>
