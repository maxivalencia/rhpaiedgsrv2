{% extends 'base.html.twig' %}

{% block title %}Détail de l'unité{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header bg-gradient-primary">
        <h4 class="card-title justify-content-between font-weight-bold">Détail de l'unité</h4>
    </div>
    <div class="card-comments m-2">
        <div class="row justify-content-center">
            <div class="col-auto justify-content-center">
                <table class="table table-sm">
                    <tbody>
                        <tr>
                            <th class="col-auto">Libelle</th>
                            <td class="col-auto">{{ unite.libelle }}</td>
                        </tr>
                        <tr>
                            <th>Abbréviation</th>
                            <td>{{ unite.abbreviation }}</td>
                        </tr>
                        <tr>
                            <th>Localité</th>
                            <td>{{ unite.localite }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ unite.email }}</td>
                        </tr>
                        <tr>
                            <th>Téléphone</th>
                            <td>{{ unite.phone }}</td>
                        </tr>
                        <tr>
                            <th>Commune</th>
                            <td>{{ unite.commune }}</td>
                        </tr>
                        <tr>
                            <th>Unité supérieur</th>
                            <td>{{ unite.uniteSuperieur }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="card-footer bg-gradient-white">
        <div class="row">
            <div class="col-1">
                <a href="{{ path('unites_index') }}" class="btn btn-sm bg-gradient-primary m-2"><i class="fa fa-arrow-left" aria-hidden="true"></i> Retour</a>
            </div>
            <div class="col-1">
                <a href="{{ path('unites_edit', {'id': unite.id}) }}" class="btn btn-sm bg-gradient-success m-2"><i class="fa fa-book" aria-hidden="true"></i> Modifier</a>
            </div>
            <div class="col-1 ml-2">
                {{ include('unites/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}